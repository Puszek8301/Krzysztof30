<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4F445"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="130dp"
        android:height="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#A313BA"
        android:gravity="center"
        android:padding="8dp"
        android:text="Gr A"
        android:textColor="@color/black"
        android:textSize="30dp"

        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A4F445"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp"
        android:paddingTop="20dp"
        >


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="#F4F4F4"
            android:orientation="vertical"
            android:padding="7.5dp"
            android:layout_gravity="left"

            >


            <View
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:background="#CA2EE6"

                />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#CA2EE6"
                android:layout_marginLeft="7.5dp"
                />


        </LinearLayout>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Krzysztof, Tracz"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="#F4F4F4"
            android:orientation="vertical"
            android:padding="7.5dp"
            android:layout_gravity="right"
            >


            <View
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:background="#CA2EE6"

                />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#CA2EE6"
                android:layout_marginLeft="7.5dp"
                />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#CA2EE6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4559F4"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        >


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"

            android:layout_marginTop="5dp"
            android:background="#429023"
            android:orientation="vertical"
            android:padding="7.5dp"


            >


            <View
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="#CA2EE6" />

            <View
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="#CA2EE6" />

            <View
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="#CA2EE6" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="#429023"
            android:orientation="vertical"
            android:layout_marginLeft="250dp"
            android:padding="7.5dp"

            >


            <View
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="#FFEB3B" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00BCD4"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#00BCD4"
            android:orientation="horizontal"
            android:padding="7.5dp"


            >


            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#FFEB3B" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#FFEB3B" />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#FFEB3B" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#00BCD4"
            android:orientation="horizontal"
            android:padding="7.5dp"
            android:layout_marginLeft="20dp"

            >


            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#FFEB3B" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#FFEB3B" />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="#FFEB3B" />


        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00BCD4"
    >

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="48dp"
        android:background="#FF602E" />

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="#FF602E"
        android:layout_marginLeft="254.5dp"

        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:background="#FFEB3B"
            android:orientation="vertical"

            >


            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#FF602E"

                />


        </LinearLayout>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="75dp"
            android:paddingRight="75dp"
            android:text="Klasa"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:background="#FFEB3B"
            android:orientation="vertical"

            >


            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#FF602E"

                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00BCD4">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:height="80dp"
            android:background="#FF9800"
            android:gravity="center"
            android:padding="8dp"
            android:text="4d"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

